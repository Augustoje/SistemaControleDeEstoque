

@page
@model ControleDeEstoque.Pages.Produtos.CreateModel
@{ ViewData["Title"] = "Cadastro";
}

<div class="container col-8">
    <h4 class="text-center"> Cadastro Novo Produto</h4>
    <hr />


    <div class="card shadow h-100 py-2">
        <div class="card-body">

            <form method="Post">
                <div class="row my-2">
                    <div class="col">
                        <label for="Nome">Nome*</label>
                        <input type="text" class="form-control" id="nome" name="nome" required/>

                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for=" modelo">Modelo*</label>
                        <input type="text" class="form-control" id="modelo" name="modelo" required/>
                    </div>


                    <div class="col">
                        <label for="quantidade">Quantidade*</label>
                        <input type="number" class="form-control" id="quantidade" name="quantidade" required/>

                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for=" categoria">Categoria*</label>
                        <input type="number" class="form-control" id="categoria" name="Categoria.ID" required/>
                    </div>

                    <div class="col">
                        <label for="tamanho">Tamanho*</label>
                        <input type="text" class="form-control" id="tamanho" name="tamanho" required/>

                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for="preco">Preço de venda*</label>
                        <input type="text" class="form-control" id="preco" name="preco" required/>
                    </div>


                    <div class="col">
                        <label for="imagem">Imagem*</label>
                        <input type="text" class="form-control" id="imagem" name="imagem" required/>

                    </div>
                </div>

                <div class="row my-2">
                    <div class="col">
                        <label for="descricao">Descrição*</label>
                        <textarea class="form-control" id="mensagem" name="descricao" col="8" rows="4" required></textarea>
                    </div>

                </div>
                <div class="d-flex flex-row-reverse">
                    <button type="submit" class="btn btn-info">Cadastrar</button>
                </div>
            </form>

        </div>
    </div>

</div>