@page
@model ControleDeEstoque.Pages.Produtos.DetailModel
@{
}

<h1 class="text-center">Editar Produto</h1>
<hr />

<form method="post">
    <div class="row">
        <input type="hidden" asp-for="Produto.ID" />

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Produto.nome" class="control-label">Nome</label>
                <input asp-for="Produto.nome" class="form-control" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Produto.modelo" class="control-label">modelo</label>
                <input asp-for="Produto.modelo" class="form-control" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Produto.quantidade" class="control-label">quantidade</label>
                <input asp-for="Produto.quantidade" class="form-control" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Produto.descricao" class="control-label">descricao</label>
                <input asp-for="Produto.descricao" class="form-control" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Produto.tamanho" class="control-label">tamanho</label>
                <input asp-for="Produto.tamanho" class="form-control" />
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Produto.preco" class="control-label">preco</label>
                <input asp-for="Produto.preco" class="form-control" />
            </div>
        </div>


        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.imagem" class="control-label">Imagem</label>
                <input asp-for="Produto.imagem" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>