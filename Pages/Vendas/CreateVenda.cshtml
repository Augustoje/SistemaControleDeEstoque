@page
@model ControleDeEstoque.Pages.Vendas.CreateVendaModel
@{ ViewData["Title"] = "Venda";
}

<div class="container col-8">
    <h4 class="text-center">Venda do Produto</h4>
    <hr />


    <div class="card shadow h-100 py-2">
        <div class="card-body">

            <form method="Post">
                <div class="row my-2">
                    <div class="col">
                        <label for="Nome">Nome*</label>
                        <input type="text" class="form-control" id="nome" name="nome" />

                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for=" modelo">Modelo*</label>
                        <input type="text" class="form-control" id="modelo" name="modelo" />
                    </div>


                    <div class="col">
                        <label for="quantidade">Quantidade*</label>
                        <input type="number" class="form-control" id="quantidade" name="quantidade" />

                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for=" categoria">Código*</label>
                        <input type="number" class="form-control" id="ID" name="ID" />
                    </div>

                    <div class="col">
                        <label for="tamanho">Tamanho*</label>
                        <input type="text" class="form-control" id="tamanho" name="tamanho" />

                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for="preco">Preço de venda*</label>
                        <input type="text" class="form-control" id="preco" name="precoUnitario" />
                    </div>
                    <div class="col">
                        <label for="data">Data*</label>
                        <input type="text" class="form-control" id="data" name="data" />

                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for="preco">Preço de venda*</label>
                        <input type="text" class="form-control" id="preco" name="precoUnitario" />
                    </div>
                    <div class="d-flex flex-row-reverse">
                        <button type="submit" class="btn btn-info">Finalizar</button>
                    </div>
                </div>
            </form>

        </div>
    </div>

</div>